package application;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;

import java.awt.Button;
import java.awt.TextField;

import javafx.event.ActionEvent;

public class configController {

	// Event Listener on Button.onAction
	@FXML
	private Button send;
	@FXML
	private TextField textfield;
	@FXML
	private Button add;
	@FXML
	private Button bt1;
	
	
	public void eventButton1(ActionEvent event) {
		String text = textfield.getText();//获取文本框输入的内容
        System.out.println(text);
		
	}
	public void loginButtonEvent(ActionEvent event) throws Exception {
		application.second second=new second();
		second.showWindow();

		
	}
	public void idButtonEvent(ActionEvent event) throws Exception {
		application.id id=new id();
		id.showWindow();

		
	}
}

